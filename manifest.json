{
    "manifest_version": 3,
    "name": "Moodle Grading Helper",
    "version": "0.0.1",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_title": "Moodle Grading Helper",
        "default_popup": "src/menu.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png"
        }
    },
    "content_scripts": [
      {
        "js": ["src/main.js"],
        "matches": [
          "https://moodle.rwth-aachen.de/*"
        ]
      }
    ]
}